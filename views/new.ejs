<!doctype html>
<html>
  <head>
  </head>
  <body>

  	<form method="post" action="/post">
      Author Name:<br>
      <select name="post[authorId]">
        <% authors.forEach(function(author) {%>
        <option value="<%= author.dataValues.id %>"><%=author.dataValues.name %></option>
        <% }) %>
      </select><br>

      Blog Title:<br>
      <input type="text" name="post[title]"><br>
  		Blog Summary:<br>
  		<textarea rows="10" cols="40" name="post[content]"></textarea><br>
  		<input type="submit" value="Submit">
  	</form>
  </body>
</html>